<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
   <settings><setting name="logImpl" value="LOG4J"/></settings>
	<typeAliases>
		<typeAlias type="com.fakeghost.bbs.model.User" alias="User"/>
	</typeAliases>
   <!--
      Valid values are SLF4J, LOG4J, LOG4J2, JDK_LOGGING, COMMONS_LOGGING, STDOUT_LOGGING, NO_LOGGING
   -->
   <!-- No need to specify classpath: -->
    <mappers>
       <mapper resource="UserMapper.xml" />
        <mapper resource="PostMapper.xml" />
    </mappers>
</configuration>
